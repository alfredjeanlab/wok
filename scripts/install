#!/usr/bin/env bash
# SPDX-License-Identifier: MIT
# Copyright (c) 2026 Alfred Jean LLC
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
ROOT_DIR="$(dirname "$SCRIPT_DIR")"
INSTALL_DIR="$HOME/.local/bin"

# Ensure install directory exists
mkdir -p "$INSTALL_DIR"

# Build wok CLI
echo "Building wok..."
cd "$ROOT_DIR"
cargo build --release -p wk

# Install to ~/.local/bin/
echo "Installing to $INSTALL_DIR/wok..."
/bin/cp "$ROOT_DIR/target/release/wk" "$INSTALL_DIR/wok"

# Re-sign the binary after copying (required on macOS for adhoc-signed binaries)
if [[ "$(uname)" == "Darwin" ]]; then
    codesign --force --sign - "$INSTALL_DIR/wok"
fi

# Create wk symlink
echo "Creating symlink $INSTALL_DIR/wk -> wok..."
ln -sf wok "$INSTALL_DIR/wk"

# Install shell completions (idempotent)
install_completions() {
    local wk="${INSTALL_DIR}/wk"
    local marker="# wk-shell-completion"
    local data_dir="${XDG_DATA_HOME:-$HOME/.local/share}/wk/completions"

    # Bash
    if command -v bash &> /dev/null; then
        local rc=""
        if [[ -f "$HOME/.bashrc" ]]; then
            rc="$HOME/.bashrc"
        elif [[ -f "$HOME/.bash_profile" ]]; then
            rc="$HOME/.bash_profile"
        fi
        if [[ -n "$rc" ]] && ! grep -q "$marker" "$rc"; then
            mkdir -p "$data_dir"
            "$wk" completion bash > "$data_dir/wk.bash"
            printf '\n%s\n[ -f "%s" ] && source "%s"\n' \
                "$marker" "$data_dir/wk.bash" "$data_dir/wk.bash" >> "$rc"
            echo "Installed bash completions (source: $rc)"
        fi
    fi

    # Zsh
    if command -v zsh &> /dev/null; then
        if [[ -f "$HOME/.zshrc" ]] && ! grep -q "$marker" "$HOME/.zshrc"; then
            mkdir -p "$data_dir"
            "$wk" completion zsh > "$data_dir/_wk"
            printf '\n%s\n[ -f "%s" ] && source "%s"\n' \
                "$marker" "$data_dir/_wk" "$data_dir/_wk" >> "$HOME/.zshrc"
            echo "Installed zsh completions (source: ~/.zshrc)"
        fi
    fi

    # Fish
    if command -v fish &> /dev/null; then
        local fish_dir="${XDG_CONFIG_HOME:-$HOME/.config}/fish/completions"
        if [[ ! -f "$fish_dir/wk.fish" ]]; then
            mkdir -p "$fish_dir"
            "$wk" completion fish > "$fish_dir/wk.fish"
            echo "Installed fish completions"
        fi
    fi
}

install_completions

echo "Done"
