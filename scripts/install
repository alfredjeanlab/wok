#!/bin/bash
set -e

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
ROOT_DIR="$(dirname "$SCRIPT_DIR")"
INSTALL_DIR="$HOME/.local/bin"

# Ensure install directory exists
mkdir -p "$INSTALL_DIR"

# Build wk CLI
echo "Building wk..."
cd "$ROOT_DIR"
cargo build --release -p wk

# Install to ~/.local/bin/
echo "Installing to $INSTALL_DIR/wk..."
/bin/cp "$ROOT_DIR/target/release/wk" "$INSTALL_DIR/wk"

# Re-sign the binary after copying (required on macOS for adhoc-signed binaries)
if [[ "$(uname)" == "Darwin" ]]; then
    codesign --force --sign - "$INSTALL_DIR/wk"
fi

echo "Done."
